<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GithubUserApp" parent="Theme.Material3.DayNight">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorPrimaryVariant">@color/dark_primary_variant</item>
        <item name="colorSecondary">@color/dark_secondary</item>
        <item name="colorSecondaryVariant">@color/dark_secondary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/secondary</item>

        <item name="actionOverflowMenuStyle">@style/setting_color</item>
    </style>

    <style name="setting_color" parent="Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="tint">?attr/colorOnPrimary</item>
    </style>
</resources>